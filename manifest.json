{
  "manifest_version": 3,
  "name": "Connection Capture",
  "version": "1.0.0",
  "description": "An extension to help you understand your LinkedIn connections and download profile data.",
  "permissions": ["downloads", "notifications", "storage"],
  "host_permissions": ["https://www.linkedin.com/in/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/in/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Connection Capture"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
